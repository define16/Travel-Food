<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    tools:context="com.example.user.tabtreval.Food_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/Food_Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/light_skyblue"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/Food_Layout_Top"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Food_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text="여행"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <Switch
                        android:id="@+id/Travel_Switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/Food_Map_Switch"
                        android:layout_marginTop="5dp"
                        android:layout_toLeftOf="@+id/Food_Menu_Suggest"
                        android:layout_toStartOf="@+id/Food_Menu_Suggest"
                        android:layout_weight="1"
                        android:text="Switch" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Food_Image_Top_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/pic_food_main" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Food_Layout_Best_Top"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/FoodTitle"
                        android:layout_alignStart="@+id/FoodTitle"
                        android:layout_below="@+id/Food_Map_Switch"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"
                        android:text="Best 여행지"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Food_Layout_Best_1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/Food_Best_Item_1"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/pic_travel_1" />

                            <ImageView
                                android:id="@+id/Food_Best_Item_2"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/pic_travel_2" />

                            <ImageView
                                android:id="@+id/Food_Best_Item_3"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@drawable/pic_travel_5"
                                app:srcCompat="@drawable/pic_travel_6" />

                            <ImageView
                                android:id="@+id/Food_Best_Item_4"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/pic_travel_7" />
                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Food_Layout_New_Top"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Food_New_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/Food_Best_Item_3"
                        android:layout_alignStart="@+id/Food_Best_Item_3"
                        android:layout_below="@+id/Food_Best_Item_3"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="New 여행지"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Food_Layout_New_2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/Food_New_Item_1"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/pic_travel_3" />

                            <ImageView
                                android:id="@+id/Food_New_Item_2"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/pic_travel_4" />

                            <ImageView
                                android:id="@+id/Food_New_Item_3"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/pic_travel_7" />

                            <ImageView
                                android:id="@+id/Food_New_Item_4"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/pic_travel_8" />
                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/Main_Layout_Menu"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_above="@+id/Food_Menu_Home"
            android:layout_alignTop="@+id/Food_Best_Item_1"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Food_Menu_Home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:onClick="mainClickHome"
                android:text="홈" />

            <Button
                android:id="@+id/Food_Menu_Travel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/Food_Menu_Food"
                android:layout_toStartOf="@+id/Food_Menu_Food"
                android:layout_weight="1"
                android:onClick="mainClickTravel"
                android:text="여행" />

            <Button
                android:id="@+id/Food_Menu_Food"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:onClick="mainClickFood"
                android:text="맛집"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="w,1:1"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/Food_Menu_Blog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/Food_Menu_Food"
                android:layout_toRightOf="@+id/Food_Menu_Food"
                android:layout_weight="1"
                android:onClick="mainClickBlog"
                android:text="블로그" />

            <Button
                android:id="@+id/Food_Menu_Suggest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:onClick="mainClickSuggest"
                android:text="추천" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>