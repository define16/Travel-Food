<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.tabtreval.Food_Info_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_skyblue"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/Food_Info_Layout_Top"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Food_Info_Image_1"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.17"
                    app:srcCompat="@drawable/pic_food_2" />

                <LinearLayout
                    android:id="@+id/Food_Info_Layout_Address"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.27"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/Food_Info_Address_Text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/Food_Info_Image_1"
                        android:layout_marginTop="10dp"
                        android:editable="false"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:text="한림대 맛집\n\n주소 : 강원도 춘천시 -\n\n전화 : 033-1234-1234"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Food_Info_Layout_Menu_Title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Food_Info_Menu_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/imageButton4"
                    android:layout_alignLeft="@+id/Food_Info_Prefer"
                    android:layout_alignStart="@+id/Food_Info_Prefer"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="메뉴"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Food_Info_Layout_Menu"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/Food_Info_Menu_Item_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/pic_food_15" />

                        <ImageView
                            android:id="@+id/Food_Info_Menu_Item_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/pic_food_14" />

                        <ImageView
                            android:id="@+id/Food_Info_Menu_Item_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/pic_food_13" />

                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Food_Info_Prefer_top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/imageButton4"
                    android:layout_alignLeft="@+id/Food_Info_Prefer"
                    android:layout_alignStart="@+id/Food_Info_Prefer"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="선호도"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_weight="0.16"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Food_Info_Prefer"
                    android:layout_width="360dp"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/imageButton3"
                    android:layout_alignStart="@+id/imageButton3"
                    android:layout_below="@+id/textView4"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/pic_preference" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Food_Info_LineRe_top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/imageButton4"
                    android:layout_alignLeft="@+id/Food_Info_Prefer"
                    android:layout_alignStart="@+id/Food_Info_Prefer"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="한줄 리뷰"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:text="cha*** : 맛있어요!\nkim*** : 싸고 괜찮아요\n"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Food_Info_BlogRe_top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/imageButton4"
                    android:layout_alignLeft="@+id/Food_Info_Prefer"
                    android:layout_alignStart="@+id/Food_Info_Prefer"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="블로거글"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/Food_Info_BlogRe_Item_1"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/pic_food_4" />

                        <ImageView
                            android:id="@+id/Food_Info_BlogRe_Item_2"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/pic_food_3" />

                        <ImageView
                            android:id="@+id/Food_Info_BlogRe_Item_3"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/pic_food_5" />
                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
